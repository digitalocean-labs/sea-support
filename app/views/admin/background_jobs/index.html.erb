<%# Admin Background Jobs Dashboard %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
            Background Jobs Dashboard
          </h1>
          <p class="text-gray-600 mt-1">Monitor AI analysis jobs and system performance</p>
        </div>
        
        <!-- Quick Actions -->
        <div class="flex space-x-3">
          <%= link_to admin_background_jobs_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Refresh
          <% end %>
          
          <% failed_count = @stats[:failed] || 0 %>
          <%= link_to clear_failed_admin_background_jobs_path, method: :post, 
              class: "inline-flex items-center px-4 py-2 border #{failed_count > 0 ? 'border-red-300 text-red-700 bg-red-50 hover:bg-red-100' : 'border-gray-300 text-gray-500 bg-gray-50'}  rounded-md shadow-sm text-sm font-medium",
              data: { confirm: failed_count > 0 ? "Are you sure you want to clear all #{failed_count} failed jobs?" : "No failed jobs to clear." } do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Clear Failed (<%= failed_count %>)
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Jobs -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Jobs</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:total_jobs] || 0 %></p>
          </div>
        </div>
      </div>

      <!-- Success Rate -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Success Rate</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:success_rate] || 0 %>%</p>
          </div>
        </div>
      </div>

      <!-- Processing Time -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Avg Processing</p>
            <p class="text-2xl font-semibold text-gray-900">
              <% if @stats[:avg_processing_time_ms] && @stats[:avg_processing_time_ms] > 0 %>
                <%= (@stats[:avg_processing_time_ms] / 1000.0).round(1) %>s
              <% else %>
                -
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Last 24h</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:recent_24h] || 0 %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Overview -->
    <div class="bg-white rounded-lg shadow mb-8 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Job Status Overview</h3>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <!-- Queued -->
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600"><%= @stats[:queued] || 0 %></div>
          <div class="text-sm text-gray-600">Queued</div>
        </div>
        
        <!-- Processing -->
        <div class="text-center">
          <div class="text-2xl font-bold text-yellow-600"><%= @stats[:processing] || 0 %></div>
          <div class="text-sm text-gray-600">Processing</div>
        </div>
        
        <!-- Completed -->
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600"><%= @stats[:completed] || 0 %></div>
          <div class="text-sm text-gray-600">Completed</div>
        </div>
        
        <!-- Failed -->
        <div class="text-center">
          <div class="text-2xl font-bold text-red-600"><%= @stats[:failed] || 0 %></div>
          <div class="text-sm text-gray-600">Failed</div>
        </div>
        
        <!-- Retrying -->
        <div class="text-center">
          <div class="text-2xl font-bold text-orange-600"><%= @stats[:retrying] || 0 %></div>
          <div class="text-sm text-gray-600">Retrying</div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <%= form_with url: admin_background_jobs_path, method: :get, local: true, class: "flex flex-wrap items-center space-x-4" do |form| %>
        <div class="flex items-center space-x-2">
          <%= form.label :status, "Status:", class: "text-sm font-medium text-gray-700" %>
          <%= form.select :status, 
              options_for_select([
                ['All Status', 'all'],
                ['Queued', 'queued'],
                ['Processing', 'processing'],
                ['Completed', 'completed'],
                ['Failed', 'failed'],
                ['Retrying', 'retrying']
              ], @filter_status),
              {},
              { class: "rounded border-gray-300 text-sm" } %>
        </div>
        
        <div class="flex items-center space-x-2">
          <%= form.label :date, "Time:", class: "text-sm font-medium text-gray-700" %>
          <%= form.select :date,
              options_for_select([
                ['All Time', 'all'],
                ['Today', 'today'],
                ['This Week', 'week'],
                ['This Month', 'month']
              ], @filter_date),
              {},
              { class: "rounded border-gray-300 text-sm" } %>
        </div>
        
        <%= form.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700" %>
      <% end %>
    </div>

    <!-- Jobs Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">
          AI Analysis Jobs 
          <span class="text-sm font-normal text-gray-500">(<%= @total_count %> total)</span>
        </h3>
      </div>
      
      <% if @background_jobs.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ticket</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Confidence</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @background_jobs.each do |background_job| %>
                <% ticket = background_job.ticket %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div>
                      <%= link_to ticket.ticket_number, ticket_path(ticket), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                      <div class="text-sm text-gray-500"><%= ticket.subject.truncate(50) %></div>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% case background_job.status %>
                    <% when 'queued' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Queued
                      </span>
                    <% when 'processing' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-3 h-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Processing
                      </span>
                    <% when 'completed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Completed
                      </span>
                    <% when 'failed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        Failed
                      </span>
                    <% when 'retrying' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Retrying
                      </span>
                    <% end %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= time_ago_in_words(background_job.created_at) %> ago
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= time_ago_in_words(background_job.updated_at) %> ago
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if background_job.confidence_score %>
                      <%= (background_job.confidence_score * 100).round %>%
                    <% else %>
                      -
                    <% end %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "View", admin_background_job_path(background_job), class: "text-blue-600 hover:text-blue-900" %>
                    <% if background_job.failed? %>
                      <%= link_to "Retry", retry_admin_background_job_path(background_job), method: :post, class: "text-green-600 hover:text-green-900", data: { confirm: "Retry this job?" } %>
                    <% end %>
                    <% if Rails.env.development? && background_job.processing_steps.any? %>
                      <button onclick="toggleDebugJson('<%= background_job.id %>')" class="text-purple-600 hover:text-purple-900">Debug JSON</button>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Debug JSON Sections (Development Only) -->
        <% if Rails.env.development? %>
          <% @background_jobs.each do |background_job| %>
            <% if background_job.processing_steps.any? %>
              <div id="debug-json-<%= background_job.id %>" class="hidden bg-gray-900 text-green-400 p-4 rounded-lg mt-4 overflow-x-auto">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-lg font-medium text-white">Debug Data for Job ID: <%= background_job.id %></h4>
                  <button onclick="toggleDebugJson('<%= background_job.id %>')" class="text-gray-400 hover:text-white">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
                <div class="space-y-4">
                  <div>
                    <h5 class="text-white font-medium mb-2">Processing Steps:</h5>
                    <pre class="text-xs"><%= JSON.pretty_generate(background_job.processing_steps) %></pre>
                  </div>
                  <div>
                    <h5 class="text-white font-medium mb-2">Console Logs:</h5>
                    <pre class="text-xs"><%= JSON.pretty_generate(background_job.console_logs) %></pre>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        
        <!-- Pagination -->
        <% if @total_pages > 1 %>
          <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
              <% if @has_prev_page %>
                <%= link_to "Previous", admin_background_jobs_path(page: @page - 1, status: @filter_status, date: @filter_date), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
              <% if @has_next_page %>
                <%= link_to "Next", admin_background_jobs_path(page: @page + 1, status: @filter_status, date: @filter_date), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing <span class="font-medium"><%= (@page - 1) * @per_page + 1 %></span> to 
                  <span class="font-medium"><%= [@page * @per_page, @total_count].min %></span> of 
                  <span class="font-medium"><%= @total_count %></span> results
                </p>
              </div>
              <div>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                  <% if @has_prev_page %>
                    <%= link_to admin_background_jobs_path(page: @page - 1, status: @filter_status, date: @filter_date), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                      <span class="sr-only">Previous</span>
                      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  <% end %>
                  
                  <% (1..@total_pages).each do |page_num| %>
                    <% if (@page - page_num).abs <= 2 || page_num == 1 || page_num == @total_pages %>
                      <%= link_to page_num, admin_background_jobs_path(page: page_num, status: @filter_status, date: @filter_date), 
                          class: "relative inline-flex items-center px-4 py-2 border text-sm font-medium #{page_num == @page ? 'z-10 bg-blue-50 border-blue-500 text-blue-600' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50'}" %>
                    <% elsif (@page - page_num).abs == 3 %>
                      <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                    <% end %>
                  <% end %>
                  
                  <% if @has_next_page %>
                    <%= link_to admin_background_jobs_path(page: @page + 1, status: @filter_status, date: @filter_date), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                      <span class="sr-only">Next</span>
                      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </nav>
              </div>
            </div>
          </div>
        <% end %>
        
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No jobs found</h3>
          <p class="mt-1 text-sm text-gray-500">No AI analysis jobs match your current filters.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
// Toggle debug JSON visibility
function toggleDebugJson(ticketId) {
  const debugSection = document.getElementById(`debug-json-${ticketId}`);
  if (debugSection) {
    if (debugSection.classList.contains('hidden')) {
      debugSection.classList.remove('hidden');
    } else {
      debugSection.classList.add('hidden');
    }
  }
}

// Auto-refresh page every 30 seconds if there are active jobs
<% if (@stats[:queued] || 0) > 0 || (@stats[:processing] || 0) > 0 || (@stats[:retrying] || 0) > 0 %>
  setTimeout(() => {
    window.location.reload();
  }, 30000);
<% end %>
</script>